<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
        <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%>
        <h4><%= link_to idea.name, idea %></h4>
        <p><%= idea.description %></p>
        <p><%= idea.reference %></p>
        <p><%= link_to 'Edit', edit_idea_path(idea) %> <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
<% end %>
